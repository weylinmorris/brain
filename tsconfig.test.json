{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/utils/dateUtils.ts",
    "src/utils/blockUtils.ts",
    "src/utils/aiUtils.ts",
    "src/types/ai.ts",
    "src/types/block.ts",
    "src/@types/**/*.d.ts",
    "src/@types/node/process.d.ts",
    "src/types/lexical.ts"
  ]
}
